                "exec": [
                  "// Visualization Script",
                  "// Visualization Script",
                  "const template = `",
                  "<div style=\"max-width: 400px; margin: 2em auto; padding: 1.5em; border-radius: 8px; background: #f7f7f9; box-shadow: 0 2px 8px rgba(0,0,0,0.07); font-family: Arial, sans-serif;\">",
                  "  <h3 style=\"margin-top: 0; color: #2d3a4b;\">User Details</h3>",
                  "  <table style=\"width: 100%; border-collapse: collapse;\">",
                  "    <tr>",
                  "      <td style=\"font-weight: bold; padding: 0.5em 0; color: #555;\">ID</td>",
                  "      <td style=\"padding: 0.5em 0;\">{{user.id}}</td>",
                  "    </tr>",
                  "    <tr>",
                  "      <td style=\"font-weight: bold; padding: 0.5em 0; color: #555;\">Name</td>",
                  "      <td style=\"padding: 0.5em 0;\">{{user.name}}</td>",
                  "    </tr>",
                  "    <tr>",
                  "      <td style=\"font-weight: bold; padding: 0.5em 0; color: #555;\">Email</td>",
                  "      <td style=\"padding: 0.5em 0;\">{{user.email}}</td>",
                  "    </tr>",
                  "  </table>",
                  "</div>`;",
                  "",
                  "function createPayload() {",
                  "    let user = {};",
                  "    try {",
                  "        user = pm.response.json();",
                  "    } catch (e) {",
                  "        user = { id: 'N/A', name: 'N/A', email: 'N/A' };",
                  "    }",
                  "    return { user };",
                  "}",
                  "",
                  "pm.visualizer.set(template, createPayload());"
                ],
                "type": "text/javascript",
                "packages": {},
                "requests": {}
              }
